@model List<Course> 
<div class="container">
    <div class="row pt-4 pb-3" >
        <div class="col-6">
            <h2 class="text-primary">
                Available Courses
                </h2>
        </div>
         <div class="col-6 text-end">
             <a asp-controller="Course" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Course Ad
                 </a>
        </div>
</div>

<table id="tblData" class ="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Tutor</th>
            <th>Category</th>
        </tr</thead>

</table>

</div>

@section Scripts {
    <script src="~/js/course.js"></script>
}
