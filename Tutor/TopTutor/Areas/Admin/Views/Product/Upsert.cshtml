@model ProductVM

<form method="post" class="row" enctype="multipart/form-data">
    <input asp-for="Product.Id" hidden />
    <input asp-for="Product.ImageUrl" hidden />
    <div class="row">
        <div class="col-10">
            <div class="border p-3 mt-4">
                <div class="row pb-2">
                    <h2 class="text-bg-danger-primary"> @(Model.Product.Id != 0 ? "Update" : "Create") Tutor Ad</h2>
                    <hr />
                </div>
                @*<div asp-validation-summary="ModelOnly"></div>*@
                <div class="mb-3 row">
                    <label asp-for="Product.Title" class="p-0"></label>
                    <input asp-for="Product.Title" type="text" class="form-control" />

                    <span asp-validation-for="Product.Title" class="text-danger"></span>
                </div>
                <div class="mb-3 row">
                    <label asp-for="Product.Description" class="p-0"></label>
                    <textarea asp-for="Product.Description" type="text" class="form-control"> </textarea>


                </div>
                <div class="mb-3 row">
                    <label asp-for="Product.TutorName" class="p-0"></label>
                    <input asp-for="Product.TutorName" type="text" class="form-control" />

                    <span asp-validation-for="Product.TutorName" class="text-danger"></span>
                </div>
                <div class="mb-3 row">
                    <label asp-for="Product.ListPrice" class="p-0"></label>
                    <input asp-for="Product.ListPrice" type="text" class="form-control" />
                    <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
                </div>
                <div class="mb-3 row">
                    <label asp-for="Product.CategoryId" lass="p-0"></label>
                    <select asp-for="@Model.Product.CategoryId" asp-items="@Model.CategoryList" type="text" class="form-select">
                        <option disabled selected value="">Select Category</option>
                    </select>
                    <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                </div>
                <div class="mb-3 row">
                    <label asp-for="Product.ImageUrl" class="p-0"></label>
                    <input asp-for="Product.ImageUrl" type="file" name="file" class="form-control" />
                </div>
                <div class="row">
                    <div class="col-6 col-md-3">
                        @if (Model.Product.Id != 0)
                        {
                            <button type="submit" class="btn btn-primary form-control">Update</button>

                        }
                        else
                        {
                            <button type="submit" class="btn btn-primary form-control">Create</button>
                        }
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary border form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <div class="col-2" style="margin-top: 20px;">
            <img src="@Model.Product.ImageUrl" width="100%" style="border-radius:5px; border:1px solid" />
        </div>

    </div>
   
</form>

@section Scripts {
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons  lists   table visualblocks wordcount',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough |  align lineheight | numlist bullist indent outdent',
        });
    </script>
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}

