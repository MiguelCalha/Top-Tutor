﻿
@model int

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Confirmation</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="text-primary">Order Placed Successfully!</h1>
                <p>Your Order Number is: <strong>@Model</strong></p>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-12 text-center">
                <img src="https://aogdesign.com.au/wp-content/uploads/2019/02/checkmark.gif" class="img-fluid" alt="Order Confirmation Image">
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-12 text-center text-primary">
                <p>Your order has been placed successfully! Thank you for your purchase!</p>
            </div>
        </div>
    </div>
    <!-- Bootstrap JS (Optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
